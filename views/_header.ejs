<!-- since header and footer both are required in home.ejs and profile.ejs we create two files name _header.ejs and _footer.ejs and we add required link in the home and profile.ejs scripts -->
<header>
    Page Header
    <ul>
        <% if (locals.user) {%>
            <li> 
                <a href="/users/profile">
                    <%= user.name %>
                </a>
            </li>
            <li>
                <a href="/users/sign-out">Sign Out</a>
            </li>
        <%} else{ %>
                <li>
                    <a href="/users/sign-in">Sign In</a>
                </li>
                <li>
                    <a href="/users/sign-up">Sign Up</a>
                </li>
        <% } %>
    </ul>
</header>